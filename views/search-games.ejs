<%- include('./templates/header', {title : 'Search Games'})  %>

<div class="bodycolor">
    <div class="navbar">
        <div class="navbar__icon">
                <i class="fab fa-instagram size"></i>
                <i class="far fa-envelope sizesmall color message"></i>
                <i class="fas fa-chalkboard-teacher sizesmall color"></i>
            </div>
            <div class="navbar__items">
                <ul class="navbar__ul">
                    <li class="navbar__item">
                        <div class="navbar__dropdown">
                            <span class="navbar__title"><%= user.name %></span>
                            <i class="fas fa-chevron-right space "></i>
                        </div>
                        <ul class="navbar__menu">
                            <li class="navbar__itemmenu">
                                <a class="navbar__ancor noneshadow" href="#">My profile</a>
                            </li>
                            <li class="navbar__itemmenu">
                                <a class="navbar__ancor noneshadow" href="#">Notifications</a>
                            </li>
                            <li class="navbar__itemmenu">
                                <a class="navbar__ancor noneshadow" href="#">Message</a>
                            </li>
                            <li class="navbar__itemmenu"><a class="navbar__ancor noneshadow" href="/auth/logout">Log out <i class="fas fa-sign-out-alt navbar__icon--position"></i></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

	<div class="boxtwo">
        <%- include('./templates/chat')  %>
        <div class="boxtwo__right">
        	<div class="boxtwo__container">
        		<% games.forEach(element => { %>
			        <div class="boxtwo__boxprofile">
			            <img style="height: 70px; width: 130px;" src="/static/image/<%= element.urlPic %>">
			            <p class="boxtwo__title"> <%= element.name %> </p>
			            <a class="btns hero__btninput hero__btnmargin" href="/home-user/add-to-my-game/<%= element.name %>">Add Game</a>
			        </div>
			    <% }) %>    
			</div>
        </div>
    </div> 

 <script src="/static/js/main.js"></script>
</body>
</html>        